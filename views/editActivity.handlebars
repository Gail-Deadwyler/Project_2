<link rel="stylesheet" href="/styles/edit.css" type="text/css">

<div class="col-md-3 d-flex align-items-stretch">
    <div class="card" style="max-height: 575px; overflow: scroll;">
        <div class="card-header">
            Edit Activity
        </div>


        <h3 id="activity-text" data-id="{{activity.id}}">{{activity.title}}</h3>
        <form id="edit-form">

            <div class="form-group">
                <label for="activity-title">Title:</label>
                <input type="text" id="new-activity-title" name="title" value="{{activity.title}}">
            </div>

            <div class="form-group">
                <label for="activity-type">Type:</label>
                <select id="new-avtivity-type" name="type">
                    <option value="{{activity.type}}">{{activity.type}}</option>
                    <option value="Steps">Steps</option>
                    <option value="Hours">Hours</option>
                    <option value="Miles">Miles</option>
                </select>
            </div>

            <div class="form-group">
                <label for="activity-amount">Amount:</label>
                <input type="text" id="new-activity-amount" name="amount" value="{{activity.units}}">
            </div>

            <button type="submit">Save</button>

        </form>


    </div>
</div>

<script src="/js/editActivity.js"></script>